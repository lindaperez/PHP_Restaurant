{% extends '::layout.html.twig' %}

{% block content %}

{% for flashMessage in app.session.flashbag.get('flash_info') %}
<div class="isa_info">
        {{ flashMessage }}
    </div>
<br><br>
{% endfor %}
 

{% for flashMessage in app.session.flashbag.get('flash_warning') %}
<div class="isa_warning">
        {{ flashMessage }}
    </div>
<br><br>
{% endfor %}
 


{% for flashMessage in app.session.flashbag.get('flash_error') %}
<div class="isa_error">
        {{ flashMessage }}
    </div>
<br><br>
{% endfor %}
     
<div class="container" >

    <section class="register">
    
        <h1>Men√∫ de Platos a Ofrecer</h1>

    <table class="records_list">
        <br>
        <thead>
            <tr>
                <td width="80"><h1><strong>Nro</strong></h1></td>
                 <td width="10"></td>
                <td width="300"><h1><strong>Nombre</strong></h1></td>
                <td width="10"></td>
                <td width="80"><h1><strong>Precio</strong></h1></td>
                <td width="10"></td>
                <td width="80"><h1><strong>Estado</strong></h1></td>
                <td width="10"></td>
                <td width="80"><h1><strong>Acciones</strong></h1></td>
                <td width="10"></td>
            </tr>
        </thead>
        
        <tbody>
        {% for entity in entities %}
            <tr>
                <td width="80"><a href="{{ path('ens_platos_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td width="10"></td>
                <td width="300">{{ entity.vnombre }}</td>
                <td width="10"></td>
                <td width="80">{{ entity.dprecio }}</td>
                <td width="10"></td>
                <td width="80">{{ entity.vestado }}</td>
                <td width="10"></td>
                <td width="80">
                <ul>
                    <li>
                        <a href="{{ path('ens_platos_edit', { 'id': entity.id }) }}">Ver/Editar</a>
                    </li>
                </ul>
                </td>
                <td width="10"></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
            <br>            <br>
        <li>
            <a href="{{ path('ens_platos_new') }}">
                Crear Nuevo Plato
            </a>
        </li>
    </ul>
    </section>
    </div>
    {% endblock %}
