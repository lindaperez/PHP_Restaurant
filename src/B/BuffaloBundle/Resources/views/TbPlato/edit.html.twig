{% extends '::layout.html.twig' %}

{% block content %}

{% for flashMessage in app.session.flashbag.get('flash_info') %}
<div class="isa_info">
        {{ flashMessage }}
    </div>
<br><br>
{% endfor %}
 

{% for flashMessage in app.session.flashbag.get('flash_warning') %}
<div class="isa_warning">
        {{ flashMessage }}
    </div>
<br><br>
{% endfor %}
 


{% for flashMessage in app.session.flashbag.get('flash_error') %}
<div class="isa_error">
        {{ flashMessage }}
    </div>
<br><br>
{% endfor %}
     
<div class="container" >

    <section class="register">

        <h1>Editar Plato</h1>

    <form action="{{ path('ens_platos_update',{ 'id': entity.id }) }}" method="post" class="login">
 {{ form_start(edit_form) }}
{{ form_errors(edit_form) }}
       
  <div class="error">
            {{ form_errors(edit_form.vnombre) }}</div>       
        <table>  <td width="100">
        {{ form_label(edit_form.vnombre, 'Nombre:', {'required': 'true'}) }}</td>
            <td>{{ form_widget(edit_form.vnombre) }}</td>
        </table>
    <div class="error">
            {{ form_errors(edit_form.dprecio) }}</div>       
        <table>  <td width="100">
        {{ form_label(edit_form.dprecio, 'Precio:', {'required': 'true'}) }}</td>
            <td>{{ form_widget(edit_form.dprecio) }}</td>
        </table>
    <div class="error">
            {{ form_errors(edit_form.fkIidEstado) }}</div>       
        <table>  <td width="100">
        {{ form_label(edit_form.fkIidEstado, 'Estado:', {'required': 'true'}) }}</td>
            <td>{{ form_widget(edit_form.fkIidEstado) }}</td>
        </table>

        <p class="submit">   
            <input type="submit" name="commit" value="Editar">
        </p>    
            <div style="display: none;">
        {{ form_row(edit_form.submit, { 'label': 'Editar' }) }}
            </div>
   {{ form_end(edit_form) }}     


        <ul class="record_actions">
    <li>
        <a href="{{ path('ens_platos') }}">
            Volver a la Lista de Platos
        </a>
    </li>
    
</ul>
        </form>
    </section>
    </div>
{% endblock %}
