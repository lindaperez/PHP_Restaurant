{% extends '::layout.html.twig' %}

{% block content %}

{% for flashMessage in app.session.flashbag.get('flash_info') %}
<div class="isa_info">
        {{ flashMessage }}
    </div>
<br><br>
{% endfor %}
 

{% for flashMessage in app.session.flashbag.get('flash_warning') %}
<div class="isa_warning">
        {{ flashMessage }}
    </div>
<br><br>
{% endfor %}
 


{% for flashMessage in app.session.flashbag.get('flash_error') %}
<div class="isa_error">
        {{ flashMessage }}
    </div>
<br><br>
{% endfor %}
     
<div class="container" >

    <section class="register">    <h1>Plato: <strong>{{ entity.vnombre }}</strong> </h1>

    <table class="record_properties">
        <tbody>
            
            <tr>
                <th>Nombre:</th>
                <br>
                <td>{{ entity.vnombre }}</td>
            </tr>
            <tr>
                <th>Precio:</th>
                <td>{{ entity.dprecio }}</td>
            </tr>
            <tr>
                <th>Estado:</th>
                <td>{{ entity.vestado }}</td>
            </tr>
        </tbody>
    </table>
<br>
        <ul class="record_actions">
            
    <li>
        <a href="{{ path('ens_platos') }}">
            Volver a Lista de Estados
        </a>
    </li>
    <li>
        <a href="{{ path('ens_platos_edit', { 'id': entity.id }) }}">
            Editar Plato
        </a>
    </li>
    
</ul>
        </section>
</div>
{% endblock %}
