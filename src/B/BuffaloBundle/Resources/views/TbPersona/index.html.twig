 {% extends '::layout.html.twig' %}

{% block content %}

{% for flashMessage in app.session.flashbag.get('flash_info') %}
<div class="isa_info">
        {{ flashMessage }}
    </div>
<br><br>
{% endfor %}
 

{% for flashMessage in app.session.flashbag.get('flash_warning') %}
<div class="isa_warning">
        {{ flashMessage }}
    </div>
<br><br>
{% endfor %}
 


{% for flashMessage in app.session.flashbag.get('flash_error') %}
<div class="isa_error">
        {{ flashMessage }}
    </div>
<br><br>
{% endfor %}
 
<div class="container" >
    <h1>Listado de Personas</h1>
    <section class="register">
        <h1>Personal Encargado</h1>
       <br>
    <table class="records_list">
        <thead>
            <tr>
                 
                 <td width="80"><h1><strong>Cédula</strong></h1></td>
                 <td width="5"></td>
                 <td width="80"><h1><strong>Nombre</strong></h1></td>
                 <td width="5"></td>
                 <td width="80"><h1><strong>Apellido</strong></h1></td>
                 <td width="5"></td>
                 <td width="80"><h1><strong>Correo</strong></h1></td>
                 <td width="5"></td>
                 <td width="80"><h1><strong>Teléfono</strong></h1></td>
                 <td width="5"></td>
                 <td width="200"><h1><strong>Dirección</strong></h1></td>
                 <td width="5"></td>
                 <td width="80"><h1><strong>Acciones</strong></h1></td>
                 <td width="5"></td>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td width="80"><a href="{{ path('ens_personas_show', { 'id': entity.id }) }}">{{ entity.icedula }}</a></td>
                <td width="5"></td>
                <td width="80">{{ entity.vnombre }}</td>
                <td width="5"></td>
                <td width="80">{{ entity.vapellido }}</td>
                <td width="5"></td>
                <td width="80">{{ entity.vcorreo }}</td>
                <td width="5"></td>
                <td width="80" >{{ entity.itelefono }}</td>
                <td width="5"></td> 
                <td width="200">{{ entity.vdireccion }}</td>
                <td width="5"></td>
                
                <td width="80">
                <ul>
                    <li>
                        <a href="{{ path('ens_personas_edit', { 'id': entity.id }) }}">Ver/Editar</a>
                    </li>
                </ul>
                </td>
                <td width="5"></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        </section>
    <br><br>
        <ul>
        <li>
            <a href="{{ path('ens_personas_new') }}">
                Crear nueva Persona
            </a>
        </li>
    </ul>
    </div>
    {% endblock %}
