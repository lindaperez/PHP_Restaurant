{% extends '::layout.html.twig' %}

{% block content %}

{% for flashMessage in app.session.flashbag.get('flash_info') %}
<div class="isa_info">
        {{ flashMessage }}
    </div>
<br><br>
{% endfor %}
 

{% for flashMessage in app.session.flashbag.get('flash_warning') %}
<div class="isa_warning">
        {{ flashMessage }}
    </div>
<br><br>
{% endfor %}
 


{% for flashMessage in app.session.flashbag.get('flash_error') %}
<div class="isa_error">
        {{ flashMessage }}
    </div>
<br><br>
{% endfor %}
 
<div class="container" >
    <section class="register">
    <h1>Nueva Mesa</h1>

     <form action="{{ path('ens_mesas_create') }}" method="post" id="login">
 {{ form_start(form) }}
{{ form_errors(form) }}
    <table>
        <td width='10'></td>
       <td>
        <div style="display: none;">
        {{ form_row(form.submit, { 'label': 'Crear' }) }}
    </div>
                   <div class="error">
            {{ form_errors(form.inroMesa) }}</div>       
        <table>  <td width="100">
        {{ form_label(form.inroMesa, 'Nro de Mesa:', {'required': 'true'}) }}</td>
            <td>{{ form_widget(form.inroMesa) }}</td>
        </table>
      <div class="error">
            {{ form_errors(form.fkIidEstadoMesa) }}</div>       
        <table>  <td width="100">
        {{ form_label(form.fkIidEstadoMesa, 'Estado:', {'required': 'true'}) }}</td>
            <td>{{ form_widget(form.fkIidEstadoMesa) }}</td>
        </table>
<div class="error">
            {{ form_errors(form.destatus) }}</div>       
        <table>  <td width="100">
        {{ form_label(form.destatus, 'Descripcion:', {'required': 'true'}) }}</td>
            <td>{{ form_widget(form.destatus) }}</td>
        </table>
           
</table>                          
<p class="submit">   
                <input type="submit" name="commit" value="Crear">
            </p>    
   {{ form_end(form) }}     

</form>


        <ul class="record_actions">
    <li>
        <a href="{{ path('ens_mesas') }}">
            Volver a la Lista de Mesas
        </a>
    </li>
</ul>
    </section>
</div>
{% endblock %}
