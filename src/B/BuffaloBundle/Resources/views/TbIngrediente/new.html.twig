 {% extends '::layout.html.twig' %}

{% block content %}

{% for flashMessage in app.session.flashbag.get('flash_info') %}
<div class="isa_info">
        {{ flashMessage }}
    </div>
<br><br>
{% endfor %}
 

{% for flashMessage in app.session.flashbag.get('flash_warning') %}
<div class="isa_warning">
        {{ flashMessage }}
    </div>
<br><br>
{% endfor %}
 


{% for flashMessage in app.session.flashbag.get('flash_error') %}
<div class="isa_error">
        {{ flashMessage }}
    </div>
<br><br>
{% endfor %}
 
<div class="container" >
    <section class="register">

        <h1>Registro de Ingrediente</h1>

    <form action="{{ path('ens_ingredientes_create') }}" method="post" id="login">
 {{ form_start(form) }}
{{ form_errors(form) }}
    <table>
        <td width='10'></td>
       <td>
        <div style="display: none;">
        {{ form_row(form.submit, { 'label': 'Crear' }) }}
    </div>
      <div class="error">
            {{ form_errors(form.vnombre) }}</div>       
        <table>  <td width="100">
        {{ form_label(form.vnombre, 'Nombre:', {'required': 'true'}) }}</td>
            <td>{{ form_widget(form.vnombre) }}</td>
        </table>
<div class="error">
            {{ form_errors(form.icantidad) }}</div>       
        <table>  <td width="100">
        {{ form_label(form.icantidad, 'Cantidad:', {'required': 'true'}) }}</td>
            <td>{{ form_widget(form.icantidad) }}</td>
        </table>
           <div class="error">
            {{ form_errors(form.dcosto) }}</div>       
        <table>  <td width="100">
        {{ form_label(form.dcosto, 'Costo:', {'required': 'true'}) }}</td>
            <td>{{ form_widget(form.dcosto) }}</td>
        </table>
           <div class="error">
            {{ form_errors(form.dprecio) }}</div>       
        <table>  <td width="100">
        {{ form_label(form.dprecio, 'Precio:', {'required': 'true'}) }}</td>
            <td>{{ form_widget(form.dprecio) }}</td>
        </table>
           <div class="error">
            {{ form_errors(form.vestado) }}</div>       
        <table>  <td width="100">
        {{ form_label(form.vestado, 'Estado:', {'required': 'true'}) }}</td>
            <td>{{ form_widget(form.vestado) }}</td>
        </table>
</table>
        <ul class="record_actions">
    <li>
        <a href="{{ path('ens_ingredientes') }}">
            Volver a Lista de Ingredientes
        </a>
    </li>
</ul>                          
<p class="submit">   
                <input type="submit" name="commit" value="Crear">
            </p>    
   {{ form_end(form) }}     

</form>

    </section>
    </div>
{% endblock %}
