{% extends '::layout.html.twig' %}

{% block content %}

{% for flashMessage in app.session.flashbag.get('flash_info') %}
<div class="isa_info">
        {{ flashMessage }}
    </div>
<br><br>
{% endfor %}
 

{% for flashMessage in app.session.flashbag.get('flash_warning') %}
<div class="isa_warning">
        {{ flashMessage }}
    </div>
<br><br>
{% endfor %}
 


{% for flashMessage in app.session.flashbag.get('flash_error') %}
<div class="isa_error">
        {{ flashMessage }}
    </div>
<br><br>
{% endfor %}
 
<div class="container" >
    <section class="register">

    <h1>Listado de Ventas</h1>

    <table class="records_list">
        <thead>
            <tr>
                
                 <td width="80"><h1><strong>Persona</strong></h1></td>
                <td width="10"></td>
                 <td width="80"><h1><strong>Mesa</strong></h1></td>
                <td width="10"></td>
                <td width="80"><h1><strong>Fecha</strong></h1></td>
                <td width="10"></td>
                
                <td width="80"><h1><strong>Cantidad</strong></h1></td>
                <td width="10"></td>
                
                <td width="80"><h1><strong>Acciones</strong></h1></td>
                <td width="10"></td>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td  width="80"><a href="{{ path('ens_solicitud_show', { 'id': entity.id }) }}">{{ entity.fkIidPersona }}</a></td>
                <td width="10"></td>
                <td  width="80">{{ entity.fkIidMesa }}</td>
                <td width="10"></td>
                <td  width="80">{% if entity.dtfechaCompra %}{{ entity.dtfechaCompra|date('d-m-Y') }}{% endif %}</td>
                <td width="10"></td>
                <td  width="80">{{ entity.icantidad }}</td>
                <td width="10"></td>
                <td  width="80">
                <ul>
                    <li>
                        <a href="{{ path('ens_solicitud_edit', { 'id': entity.id }) }}">Ver/Editar</a>
                    </li>
                </ul>
                </td>
                <td width="10"></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('ens_solicitud_new') }}">
               Crear Nueva Venta
            </a>
        </li>
    </ul>
    </section>
</div>
    {% endblock %}
