{% extends '::layout.html.twig' %}

{% block content %}

{% for flashMessage in app.session.flashbag.get('flash_info') %}
<div class="isa_info">
        {{ flashMessage }}
    </div>
<br><br>
{% endfor %}
 

{% for flashMessage in app.session.flashbag.get('flash_warning') %}
<div class="isa_warning">
        {{ flashMessage }}
    </div>
<br><br>
{% endfor %}
 


{% for flashMessage in app.session.flashbag.get('flash_error') %}
<div class="isa_error">
        {{ flashMessage }}
    </div>
<br><br>
{% endfor %}
 
    <h1>Plato: <strong>{{ entity.fkIidPlato  }}</strong> </h1>
    <br>

    <table class="record_properties">
        <tbody>
            <tr>
                <td>Ingrediente:</td>
                <td>{{ entity.fkIidIngrediente }} </td>
                </tr>
                <tr></tr>
                <tr>
                <td>Cantidad:</td>
                <td>{{ entity.dcantidad }} {{ entity.fkIidMedida}}</td>
            </tr>
        </tbody>
    </table>
<br>
        <ul class="record_actions">
    <li>
        <a href="{{ path('ens_inventario') }}">
            Volver a la Lista 
        </a>
    </li>
    <li>
        <a href="{{ path('ens_inventario_edit', { 'id': entity.id }) }}">
        Editar
        </a>
    </li>
    
</ul>
{% endblock %}
