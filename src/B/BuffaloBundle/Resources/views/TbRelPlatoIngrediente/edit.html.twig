{% extends '::layout.html.twig' %}

{% block content %}

{% for flashMessage in app.session.flashbag.get('flash_info') %}
<div class="isa_info">
        {{ flashMessage }}
    </div>
<br><br>
{% endfor %}
 

{% for flashMessage in app.session.flashbag.get('flash_warning') %}
<div class="isa_warning">
        {{ flashMessage }}
    </div>
<br><br>
{% endfor %}
 


{% for flashMessage in app.session.flashbag.get('flash_error') %}
<div class="isa_error">
        {{ flashMessage }}
    </div>
<br><br>
{% endfor %}
 
<div class="container" >
    <section class="register">
<h1>Editar Plato-Ingrediente</h1>

    <form action="{{ path('ens_inventario_update',{ 'id': entity.id }) }}" method="post" class="login">
 {{ form_start(edit_form) }}
{{ form_errors(edit_form) }}
    <table>
        <td width='10'></td>
       <td>
        <div style="display: none;">
        {{ form_row(edit_form.submit, { 'label': 'Crear' }) }}
    </div>
                   <div class="error">
            {{ form_errors(edit_form.fkIidPlato) }}</div>       
        <table>  <td width="100">
        {{ form_label(edit_form.fkIidPlato, 'Plato:', {'required': 'true'}) }}</td>
            <td>{{ form_widget(edit_form.fkIidPlato) }}</td>
        </table>
      
<div class="error">
            {{ form_errors(edit_form.fkIidIngrediente) }}</div>       
        <table>  <td width="100">
        {{ form_label(edit_form.fkIidIngrediente, 'Ingrediente:', {'required': 'true'}) }}</td>
            <td>{{ form_widget(edit_form.fkIidIngrediente) }}</td>
        </table>
   
           <div class="error">
            {{ form_errors(edit_form.fkIidMedida) }}</div>       
        <table>  <td width="100">
        {{ form_label(edit_form.fkIidMedida, 'Medida:', {'required': 'true'}) }}</td>
            <td>{{ form_widget(edit_form.fkIidMedida) }}</td>
        </table>
           <div class="error">
            {{ form_errors(edit_form.dcantidad) }}</div>       
        <table>  <td width="100">
        {{ form_label(edit_form.dcantidad, 'Cantidad:', {'required': 'true'}) }}</td>
            <td>{{ form_widget(edit_form.dcantidad) }}</td>
        </table>
           
</table>                          
<p class="submit">   
                <input type="submit" name="commit" value="Crear">
            </p>    
   {{ form_end(edit_form) }}     

</form>

        <ul class="record_actions">
    <li>
        <a href="{{ path('ens_inventario') }}">
            Volver a la Lista de Asociaciones
        </a>
    </li>
    
</ul>
</section>
    </div>
{% endblock %}
