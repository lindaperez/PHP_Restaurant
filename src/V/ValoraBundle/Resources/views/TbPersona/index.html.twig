{% extends '::base.html.twig' %}

{% block body -%}
    <h1>TbPersona list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Vruc</th>
                <th>Vnombre</th>
                <th>Vapellido</th>
                <th>Icorreo</th>
                <th>Vclave</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('Persona_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.vruc }}</td>
                <td>{{ entity.vnombre }}</td>
                <td>{{ entity.vapellido }}</td>
                <td>{{ entity.icorreo }}</td>
                <td>{{ entity.vclave }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('Persona_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('Persona_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('Persona_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
