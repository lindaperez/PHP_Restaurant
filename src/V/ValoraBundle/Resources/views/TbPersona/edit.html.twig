{% extends '::layout.html.twig' %}

{% block content %}

    {% for flashMessage in app.session.flashbag.get('flash_info') %}
        <div class="isa_info">
            {{ flashMessage }}
        </div>
        <br><br>
    {% endfor %}


    {% for flashMessage in app.session.flashbag.get('flash_warning') %}
        <div class="isa_warning">
            {{ flashMessage }}
        </div>
        <br><br>
    {% endfor %}



    {% for flashMessage in app.session.flashbag.get('flash_error') %}
        <div class="isa_error">
            {{ flashMessage }}
        </div>
        <br><br>
    {% endfor %}

    <h1>Editar Registro de Persona</h1>
    <div class="container" >

        <section class="register"> 
            <form action="{{ path('Persona_update',{ 'id': entity.id }) }}" method="post" class="login">
                {{ form_start(edit_form) }}
                {{ form_errors(edit_form) }}
                <table>
                    <td width='10'></td>
                    <td>
                        <div style="display: none;">
                            {{ form_row(edit_form.submit, { 'label': 'Crear' }) }}
                            {{ form_row(edit_form.vclave, { 'label': 'Clave' }) }}

                        </div>
                        <div class="error">
                            {{ form_errors(edit_form.vruc) }}</div>       
                        <table>  <td width="100">
                                {{ form_label(edit_form.vruc, 'Ruc:', {'required': 'true'}) }}</td>
                            <td>{{ form_widget(edit_form.vruc) }}</td>
                        </table>

                        <div class="error">
                            {{ form_errors(edit_form.fkTipopersona) }}</div>       
                        <table>  <td width="100">
                                {{ form_label(edit_form.fkTipopersona, 'Rol:', {'required': 'true'}) }}</td>
                            <td>{{ form_widget(edit_form.fkTipopersona) }}</td>
                        </table>


                    </td>
                    <td width='50'></td>
                    <td>

                        <div class="error">
                            {{ form_errors(edit_form.vnombre) }}</div>       
                        <table>  <td width="100">
                                {{ form_label(edit_form.vnombre, 'Nombre:', {'required': 'true'}) }}</td>
                            <td>{{ form_widget(edit_form.vnombre) }}</td>
                        </table>
                        <div class="error">
                            {{ form_errors(edit_form.icorreo) }}</div>       
                        <table>  <td width="100">
                                {{ form_label(edit_form.icorreo, 'Correo:', {'required': 'true'}) }}</td>
                            <td>{{ form_widget(edit_form.icorreo) }}</td>
                        </table>



                    </td>
                    <td width='50'></td>
                    <td>

                        <div class="error">
                            {{ form_errors(edit_form.vapellido) }}</div>       
                        <table>  <td width="100">
                                {{ form_label(edit_form.vapellido, 'Apellido:', {'required': 'true'}) }}</td>
                            <td>{{ form_widget(edit_form.vapellido) }}</td>
                        </table>

                    </td>

                </table>

                <br>    <br><br>    <br>
                <p class="submit">   
                    <input type="submit" name="commit" value="Editar">
                </p>    
                {{ form_end(edit_form) }}     
            </form>
            <ul class="record_actions">
                <li>
                    <a href="{{ path('Persona') }}">
                        Volver al Listado de Personas
                    </a>
                </li>

            </ul>
        </section>
    </div>

{% endblock %}
